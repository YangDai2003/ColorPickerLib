<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPickerView">
        <attr name="updateMode" format="enum">
            <enum name="always" value="0" />
            <enum name="after" value="1" />
        </attr>
        <attr name="crosshairSize" format="dimension" />
        <attr name="crosshairResource" format="reference" />
        <attr name="crosshairVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
</resources>